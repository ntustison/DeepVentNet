	Doi = {10.1088/1361-6560/aa6be8},
	Journal = {Phys Med Biol},
	Journal-Full = {Physics in medicine and biology},
	Mesh = {Contrast Media; Helium; Humans; Image Processing, Computer-Assisted; Magnetic Resonance Imaging; Xenon},
